{% extends '/base.html.twig' %}


{% block body %}
    <h1>Mon profil</h1>


    <div class="container">
        <h2>Pseudo : {{ participant.nom }}</h2>
        <h2>Prénom : {{ participant.prenom }}</h2>
        <h2>Nom : {{ participant.nom }}</h2>
        <h2>Téléphone : {{ participant.telephone }}</h2>
        <h2>Email : {{ participant.mail }}</h2>
        <h2>Campus : {{ participant.campus.nom }}</h2>
        <a href="{{ path('app_modifprofil_participant/{id}', {'id': app.user.id}) }}">Modifier le profil</a>
    </div>
    <style>
        /* Center the content and add some padding */
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        /* Add some margin between the headings */
        h2 {
            margin-top: 30px;
        }

        /* Add some spacing between the participants' names */
        h2:not(:first-of-type) {
            margin-top: 10px;
        }

        /* Style the headings */
        h2 {
            font-size: 18px;
            font-weight: 600;
            color: #333;
        }

        /* Style the description and info text */
        p {
            font-size: 16px;
            color: #777;
            line-height: 1.5;
        }

        /* Add a border around the container */
        .container {
            border: 1px solid #ddd;
            border-radius: 5px;
        }

    </style>
{% endblock %}