{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2>Nom de la sortie : {{ sortie.nom }}</h2>
    <h2>Date et heure de la sortie : {{ sortie.dateHeureDebut|date("m/d/Y") }}</h2>
    <h2>Date limite d'inscription : {{ sortie.dateLimiteInscription|date("m/d/Y") }}</h2>
    <h2>Nombre de places : {{ sortie.nbInscriptionsMax }}</h2>
    <h2>Durée : {{ sortie.duree }} minutes </h2>
    <h2>Description et infos : {{ sortie.infosSortie }}</h2>
    <h2>Campus : {{ sortie.campus.nom }}</h2>
    <h2>Lieu : {{ sortie.lieu.nom }}</h2>
    <h2>Sortie organisée par : {{ sortie.organiseePar.prenom }} {{ sortie.organiseePar.nom }}</h2>
    <h2>Liste des participants :</h2>
    {% for participants in sortie.participants %}
        <h2> - {{ participants.prenom }} {{ participants.nom }}</h2>
    {% endfor %}
</div>
    <style>
        /* Center the content and add some padding */
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        /* Add some margin between the headings */
        h2 {
            margin-top: 30px;
        }

        /* Add some spacing between the participants' names */
        h2:not(:first-of-type) {
            margin-top: 10px;
        }

        /* Style the headings */
        h2 {
            font-size: 18px;
            font-weight: 600;
            color: #333;
        }

        /* Style the description and info text */
        p {
            font-size: 16px;
            color: #777;
            line-height: 1.5;
        }

        /* Add a border around the container */
        .container {
            border: 1px solid #ddd;
            border-radius: 5px;
        }

    </style>
{% endblock %}